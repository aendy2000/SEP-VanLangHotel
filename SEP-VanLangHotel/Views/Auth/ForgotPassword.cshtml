@model SEP_VanLangHotel.Models.Tai_Khoan

@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<html  style="display: table; margin: auto; height: 100%;" lang="vi">
<body  style="display: table-cell; vertical-align: middle; height: 100%;">
    <div>
        <form action="@Url.Action("ForgotPassword")" method="post">
            <p>Nhập tài khoản của bạn:</p>
            <input class="input100" type="text" name="tendangnhap" />
            <br />
            @if (Convert.ToBoolean(Session["thongbao-taikhoan-null"]) == true)
            {
                <p style="color:red">Bạn chưa nhập tài khoản</p>
            }
            @if (Convert.ToBoolean(Session["thongbao-taikhoan-incorrect"]) == true)
            {
                <p style="color:red">Tài khoản đăng nhập chưa đúng! Hãy thử lại.</p>
            }
            <button type="submit"> Tiếp tục </button>
        </form>
    </div>
</body>
</html>

