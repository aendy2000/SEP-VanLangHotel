@model SEP_VanLangHotel.Models.Tai_Khoan

@{
    ViewBag.Title = "NewPassword";
    Layout = null;
}

<html style="display: table; margin: auto; height: 100%;" lang="vi">
<body style="display: table-cell; vertical-align: middle; height: 100%;">
    <div>
        <p style="font-size: 20px;">Đặt lại mật khẩu</p>
        <br />
        <form action="@Url.Action("NewPassword")" method="post">
            <p>Nhập mật khẩu mới:</p>
            <input class="hidden" type="hidden" name="idtaikhoan" value="@Model.Ma_Tai_Khoan" />
            <input class="input100" type="text" name="matkhaumoi" />
            <br />
            @if (Convert.ToBoolean(Session["matkhaumoi-null"]) == true)
            {
                <p style="color:red">Bạn chưa nhập mật khẩu mới</p>
            }
            <p>Nhập lại mật khẩu mới:</p>
            <input class="input100" type="text" name="nhaplaimatkhaumoi" />
            @if (Convert.ToBoolean(Session["sosanh-matkhaumoi-incorrect"]) == true)
            {
                <p style="color:red">Mật khẩu mới không trùng khớp, kiểm tra lại!</p>
            }
            <br />
            <br />
            <button type="submit"> Xác nhận </button>
        </form>
    </div>
</body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
