                    </td>
                    <td>
                        Ngày về (Năm-Tháng-Ngày)
                        VD: 2000-02-20
                    </td>
                </tr>
                <tr>
                    <td rowspan="2">1</td>
                    <td>1</td>
                    <td>Nguyễn Văn A</td>
                    <td></td>
                    <td>070200000000</td>
                    <td>0367899899</td>
                    <td>
                        1997-06-28
                    </td>
                    <td>
                        1
                    </td>
                    <td>73 Bà Huyện Thanh Quan, Phường Võ Thị Sáu, Quận 3, Thành phố Hồ Chí Minh</td>
                    <td>1</td>
                    @foreach (var item in Model.tienIch)
                    {
                        <td>0</td>
                    }
                    <td rowspan="2">
                        @DateTime.Now.ToString("yyyy-MM-dd")
                    </td>
                    <td rowspan="2">
                        @DateTime.Now.AddDays(7).ToString("yyyy-MM-dd")
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Nguyễn Văn B</td>
                    <td>Bạn bè</td>
                    <td>070200001111</td>
                    <td>0909009009</td>
                    <td>
                        1997-04-22
                    </td>
                    <td>
                        1
                    </td>
                    <td>214/78 Nguyễn Oanh, Phường 17, Quận Gò Vấp, Thành phố Hồ Chí Minh</td>
                    <td>1</td>
                    @foreach (var item in Model.tienIch)
                    {
                        <td>1</td>
                    }
                </tr>
            </tbody>
        </table>

    </div>
</div>


