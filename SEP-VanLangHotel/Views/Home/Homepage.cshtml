                    <td>Mối quan hệ</td>
                    <td>Số CMND/CCCD</td>
                    <td>Số điện thoại</td>
                    <td>
                        Ngày sinh (Năm-Tháng-Ngày)
                        VD: 2000-02-20
                    </td>
                    <td>
                        Nam (1)
                        Nữ (0)
                    </td>
                    <td>Địa chỉ</td>
                    <td>Số giường</td>
                    @foreach (var item in Model.tienIch)
                    {
                        <td>@item.Ten_Tien_Ich</td>
                    }
                    <td>
                        Ngày đến (Năm-Tháng-Ngày)
